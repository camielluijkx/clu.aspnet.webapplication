<div class="add-comment-tool">

    <div>
        <span class="editor-label">
            Subject:
        </span>
        <span class="editor-field">
            @Html.EditorFor(model => model.Subject)
        </span>
    </div>

    <div>
        <span class="editor-label">
            Body:
        </span>
