@model IEnumerable<clu.aspnet.webapplication.mvc.net.Models.Photo>

@{
    ViewBag.Title = "SlideShow";
}

<h2>Slide Show</h2>

<script type="text/javascript" src="@Url.Content("~/Scripts/SlideShow.js")"></script>

<div id="slideshow-progress-bar-container">
    <div id="slideshow-progress-bar"></div>
</div>

<div id="slide-show">

    @foreach (var item in Model)
    {
        <div class="slide-show-card">
            <h3>
                @Html.ActionLink(item.Title, "Display", new { id = item.PhotoID })
            </h3>
            <p>
                By @Html.DisplayFor(modelItem => item.UserName)
            </p>
            @if (item.PhotoFile != null)
            {
                <img height="530" src="@Url.Action("GetImage", "Photo", new { id = item.PhotoID })" />
            }
        </div>
    }

</div>