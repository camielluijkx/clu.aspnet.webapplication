@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
    <link type="text/css" rel="stylesheet" href="~/content/PhotoSharingStyles.css" />
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.8.0.min.js" type="text/javascript"></script>
    <script charset="UTF-8" type="text/javascript" src="http://www.bing.com/api/maps/mapcontrol?branch=release"></script>
</head>
<body onload="GetMap();">

    <div>

        <h1 class="site-page-title">Adventure Works Photo Sharing</h1>

        <div class="login-controls">
            @if (Request.IsAuthenticated)
            {
                @:Hello, @User.Identity.Name
                @Html.ActionLink("Log Off", "LogOff", "Account")
                @Html.Label(" | ")
                @Html.ActionLink("Reset", "ResetPassword", "Account")
            }
            else
            {
                @Html.ActionLink("Log In", "Login", "Account")
                @Html.Label(" | ")
                @Html.ActionLink("Register", "Register", "Account")
            }
        </div>

        <div class="clear-floats" />

        <div id="topmenu">
            @Html.MvcSiteMap().Menu(false, true, true)
        </div>

        <div id="breadcrumb">
            @Html.MvcSiteMap().SiteMapPath()
        </div>

        @if (Session["Favorites"] != null)
        {
            <div id="favorites-link">
                @Html.ActionLink("Favorite Photos", "FavoritesSlideShow", "Photo")
            </div>
        }

        <div>
            @RenderBody()
        </div>

    </div>

</body>
</html>